<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>ICSI418-Group-Project</display-name>
  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>jdbc/QUIZ</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>Login</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>Logout</servlet-class>
  </servlet>
  <filter>
    <filter-name>userAuthentication</filter-name>
    <filter-class>edu.albany.csi418.UserAuthentication</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>userAuthentication</filter-name>
    <url-pattern>/user/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>adminAuthentication</filter-name>
    <filter-class>edu.albany.csi418.AdminAuthentication</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>adminAuthentication</filter-name>
    <url-pattern>/admin/*</url-pattern>
  </filter-mapping>
</web-app>